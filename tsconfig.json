{
  "compilerOptions": {
    "noEmit": true,
    "target": "ES2017",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": false,
    "noUncheckedIndexedAccess": true,
    "importsNotUsedAsValues": "error"
  },
  "include": ["src", "test"]
}
